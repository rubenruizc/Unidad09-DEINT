<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vmodel="clr-namespace:Ejercicio02.Models"
             x:Class="Ejercicio02.MainPage">

    <ContentPage.BindingContext>
        <vmodel:clsPersona></vmodel:clsPersona>
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Entry Placeholder="Nombre" Text="{Binding Nombre, Mode=TwoWay}"></Entry>

            <Label Text="{Binding Nombre}" FontSize="50"></Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
